<?xml version="1.0" encoding="UTF-8" ?>
<resources xmlns="https://api-platform.com/schema/metadata"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata
           https://api-platform.com/schema/metadata/metadata-2.0.xsd"
>
    <resource
        class="Book\Infrastructure\Projection\Doctrine\Orm\Entity\Book"
        description="A book."
        iri="http://schema.org/Book"
    >
        <attribute name="normalization_context">
            <attribute name="groups">
                <attribute>Book:read</attribute>
            </attribute>
        </attribute>
        <attribute name="denormalization_context">
            <attribute name="groups">
                <attribute>Book:write</attribute>
            </attribute>
        </attribute>
        <collectionOperations>
            <collectionOperation name="get">
                <attribute name="filters">
                    <attribute>book.property_filter</attribute>
                </attribute>
            </collectionOperation>
            <collectionOperation name="post"/>
        </collectionOperations>
        <itemOperations>
            <itemOperation name="get"/>
            <itemOperation name="delete"/>
        </itemOperations>

        <property
            name="isbn"
            description="The ISBN of the book"
            iri="http://schema.org/isbn"
        />
        <property
            name="title"
            description="The title of the book"
            iri="http://schema.org/name"
            required="true"
        />
        <property
            name="description"
            description="A description of the item"
            iri="http://schema.org/description"
            required="true"
        />
        <property
            name="author"
            description="The author of this content or rating. Please note that author is special in that HTML 5 provides a special mechanism for indicating authorship via the rel tag. That is equivalent to this and may be used interchangeably"
            iri="http://schema.org/author"
            required="true"
        />
        <property
            name="reviews"
            description="The book's reviews"
            iri="http://schema.org/review"
        />
    </resource>

    <resource
        class="Book\Infrastructure\Projection\Doctrine\Orm\Entity\Review"
        description="A review of an item - for example, of a restaurant, movie, or store."
        iri="http://schema.org/Review"
    >
        <attribute name="normalization_context">
            <attribute name="groups">
                <attribute>Review:read</attribute>
            </attribute>
        </attribute>
        <attribute name="denormalization_context">
            <attribute name="groups">
                <attribute>Review:write</attribute>
            </attribute>
        </attribute>
        <collectionOperations>
            <collectionOperation name="get">
            <attribute name="filters">
                <attribute>review.search_filter.book</attribute>
            </attribute>
        </collectionOperation>
            <collectionOperation name="post"/>
        </collectionOperations>
        <itemOperations>
            <itemOperation name="get"/>
            <itemOperation name="delete"/>
        </itemOperations>

        <property
            name="book"
            description="The item that is being reviewed/rated"
            iri="http://schema.org/itemReviewed"
            required="true"
        />
        <property
            name="body"
            description="The actual body of the review"
            iri="http://schema.org/reviewBody"
        />
        <property
            name="rating"
            description="The rating given in this review."
            iri="http://schema.org/reviewRating"
            required="true"
        />
        <property
            name="author"
            description="The author of the review"
            iri="http://schema.org/author"
        />
    </resource>
</resources>
